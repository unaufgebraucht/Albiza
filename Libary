-- Add this function to your Compkiller library to set the black and white theme

function Compkiller:SetBlackWhiteTheme()
    Compkiller.Colors = {
        -- Primary colors - Pure black and white contrast
        Highlight = Color3.fromRGB(255, 255, 255), -- Pure white for highlights
        Toggle = Color3.fromRGB(200, 200, 200), -- Light gray for active toggles
        
        -- Background colors - Dark theme base
        BGDBColor = Color3.fromRGB(0, 0, 0), -- Pure black background
        BlockColor = Color3.fromRGB(15, 15, 15), -- Very dark gray for blocks
        BlockBackground = Color3.fromRGB(25, 25, 25), -- Slightly lighter for containers
        DropColor = Color3.fromRGB(35, 35, 35), -- Medium dark gray for dropdowns
        
        -- Border and stroke colors
        StrokeColor = Color3.fromRGB(60, 60, 60), -- Medium gray for borders
        HighStrokeColor = Color3.fromRGB(80, 80, 80), -- Lighter gray for focused borders
        LineColor = Color3.fromRGB(40, 40, 40), -- Dark gray for separator lines
        
        -- Text and interactive elements
        SwitchColor = Color3.fromRGB(255, 255, 255), -- Pure white text
        MouseEnter = Color3.fromRGB(120, 120, 120), -- Light gray for hover states
        
        -- Special colors
        Risky = Color3.fromRGB(255, 255, 255), -- White for risky elements (instead of yellow)
    }
    
    -- Apply the theme
    Compkiller:RefreshCurrentColor()
end

-- Alternative softer black and white theme
function Compkiller:SetSoftBlackWhiteTheme()
    Compkiller.Colors = {
        -- Softer contrast version
        Highlight = Color3.fromRGB(240, 240, 240), -- Off-white highlights
        Toggle = Color3.fromRGB(180, 180, 180), -- Medium gray for toggles
        
        -- Background colors - Softer blacks
        BGDBColor = Color3.fromRGB(10, 10, 10), -- Near black
        BlockColor = Color3.fromRGB(20, 20, 20), -- Dark charcoal
        BlockBackground = Color3.fromRGB(30, 30, 30), -- Lighter charcoal
        DropColor = Color3.fromRGB(40, 40, 40), -- Medium charcoal
        
        -- Border colors - More subtle
        StrokeColor = Color3.fromRGB(70, 70, 70), -- Medium gray borders
        HighStrokeColor = Color3.fromRGB(100, 100, 100), -- Light gray focused borders
        LineColor = Color3.fromRGB(50, 50, 50), -- Subtle separator lines
        
        -- Text colors
        SwitchColor = Color3.fromRGB(240, 240, 240), -- Off-white text
        MouseEnter = Color3.fromRGB(140, 140, 140), -- Light gray hover
        
        -- Special elements
        Risky = Color3.fromRGB(220, 220, 220), -- Light gray for warnings
    }
    
    -- Apply the theme
    Compkiller:RefreshCurrentColor()
end

-- High contrast black and white theme (for accessibility)
function Compkiller:SetHighContrastTheme()
    Compkiller.Colors = {
        -- Maximum contrast for accessibility
        Highlight = Color3.fromRGB(255, 255, 255), -- Pure white
        Toggle = Color3.fromRGB(255, 255, 255), -- Pure white when active
        
        -- Pure black backgrounds
        BGDBColor = Color3.fromRGB(0, 0, 0), -- Pure black
        BlockColor = Color3.fromRGB(0, 0, 0), -- Pure black
        BlockBackground = Color3.fromRGB(10, 10, 10), -- Nearly black
        DropColor = Color3.fromRGB(20, 20, 20), -- Very dark gray
        
        -- High contrast borders
        StrokeColor = Color3.fromRGB(255, 255, 255), -- White borders
        HighStrokeColor = Color3.fromRGB(255, 255, 255), -- White focused borders
        LineColor = Color3.fromRGB(128, 128, 128), -- Medium gray lines
        
        -- Pure white text
        SwitchColor = Color3.fromRGB(255, 255, 255), -- Pure white text
        MouseEnter = Color3.fromRGB(200, 200, 200), -- Light gray hover
        
        -- High contrast warnings
        Risky = Color3.fromRGB(255, 255, 255), -- Pure white for maximum visibility
    }
    
    -- Apply the theme
    Compkiller:RefreshCurrentColor()
end
